<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ActivityMMAST" android:id="@+id/M.M.A.S.T">
    <TextView
            android:text="Player Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/playerChoiceText"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="162dp" android:layout_marginStart="162dp" android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="15dp" app:layout_constraintBottom_toTopOf="@+id/playerChoiceImage"
            android:textStyle="bold"/>
    <TextView
            android:text="M.M.A.S.T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/titleMMAST"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="147dp" android:layout_marginStart="147dp" android:layout_marginEnd="148dp"
            android:layout_marginRight="148dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="5dp" app:layout_constraintBottom_toTopOf="@+id/playerChoiceText"
            android:fontFamily="sans-serif-black"
            style="@android:style/Widget.DeviceDefault.TextView.SpinnerItem" android:textStyle="normal"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/scoreboard"
            android:text="Score: Player 0 / Computer 0" tools:text="Score: Player 0 / Computer 0"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="115dp" android:layout_marginStart="115dp" android:layout_marginEnd="115dp"
            android:layout_marginRight="115dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintBottom_toTopOf="@+id/marksmanButton"
            android:layout_marginBottom="15dp" android:textStyle="bold"/>
    <Button
            android:text="Mage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/mageButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"
            app:layout_constraintBottom_toTopOf="@+id/supportButton" android:layout_marginBottom="16dp"/>
    <Button
            android:text="Marskman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/marksmanButton"
            android:layout_marginLeft="25dp" android:layout_marginStart="25dp"
            app:layout_constraintStart_toEndOf="@+id/mageButton"
            app:layout_constraintEnd_toStartOf="@+id/assassinButton" android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/supportButton"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/assassinButton"
            tools:text="Assassin"
            android:text="Assassin"
            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/tankButton"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text="Support"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/supportButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp" android:layout_marginStart="100dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toStartOf="@+id/tankButton"
    />
    <Button
            android:text="Tank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tankButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp" android:layout_marginEnd="100dp" android:layout_marginRight="100dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginLeft="35dp" android:layout_marginStart="35dp"
            app:layout_constraintStart_toEndOf="@+id/supportButton"
    />
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/marksman" android:id="@+id/computerChoiceImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="123dp" android:layout_marginStart="123dp" android:layout_marginEnd="123dp"
            android:layout_marginRight="123dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/scoreboard" android:layout_marginBottom="15dp"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/assassin" android:id="@+id/playerChoiceImage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="123dp" android:layout_marginStart="123dp" android:layout_marginEnd="123dp"
            android:layout_marginRight="123dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/computerChoiceText" android:layout_marginBottom="15dp"/>
    <TextView
            android:text="Computer Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/computerChoiceText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="150dp" android:layout_marginStart="150dp" android:layout_marginEnd="150dp"
            android:layout_marginRight="150dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="15dp" app:layout_constraintBottom_toTopOf="@+id/computerChoiceImage"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>